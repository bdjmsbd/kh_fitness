<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>

    <!-- main/main.jsp를 제외하기 위한 정의 -->
    <definition name="/main/main" template="/WEB-INF/views/layout/layoutMain.jsp">
        <put-attribute name="head" value="/WEB-INF/views/common/head.jsp" />
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/main/main.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
    </definition>

	<!-- member/login.jsp를 제외하기 위한 정의 -->
    <definition name="/member/login" template="/WEB-INF/views/layout/layoutLogin.jsp">
        <put-attribute name="head" value="/WEB-INF/views/common/head.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/member/login.jsp" />
    </definition>

	<!-- error.jsp를 제외하기 위한 정의 -->
    <definition name="/error/404" template="/WEB-INF/views/layout/layoutError.jsp">
        <put-attribute name="head" value="/WEB-INF/views/common/head.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/error/404.jsp" />
    </definition>
    
	<!-- error.jsp를 제외하기 위한 정의 -->
    <definition name="/error/500" template="/WEB-INF/views/layout/layoutError.jsp">
        <put-attribute name="head" value="/WEB-INF/views/common/head.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/error/500.jsp" />
    </definition>
    
    <definition name="/*/*" template="/WEB-INF/views/layout/layout.jsp">
        <put-attribute name="head" value="/WEB-INF/views/common/head.jsp" />
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
    </definition>
    
    <definition name="/*/*/*" template="/WEB-INF/views/layout/layout.jsp">
   	 	<put-attribute name="head" value="/WEB-INF/views/common/head.jsp" />
	    <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
	    <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	    <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
    </definition>
    
</tiles-definitions>